$("ul.errors").html("")
	<% if @product.errors.any? %>
		<% @product.errors.full_messages.each do |message| %>
			$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
		<% end %>
	<% else %>
		$(".product-index").html("<%= escape_javascript(render 'index') %>")
		$.fancybox.close();
	<% end %>


